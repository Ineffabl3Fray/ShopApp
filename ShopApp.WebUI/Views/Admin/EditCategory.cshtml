@model CategoryModel

@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">

        @if (Model.Products.Count > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width:30px">
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th style="width:100px">
                            ImageUrl
                        </th>
                        <th style="width:14px">
                            Price
                        </th>
                        <th style="width:140px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td width="80px">
                                <img src="~/img/@item.ImageUrl" width="80" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditProduct", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                @Html.ActionLink("Delete", "DeleteProductFromCategory", new { productId = item.Id, categoryId = Model.Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No Product!
            </div>
        }
    </div>
</div>

<div>
    <a class="btn btn-info btn-sm" asp-controller="Admin" asp-action="CategoryList">Back to List</a>
</div>

